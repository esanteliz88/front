  <% } %>
  
  <form action="/administracion/cuentas/<%= cuenta.id_cuenta %>" method="POST">
    <div class="mb-3">
      <label for="codigo" class="form-label">CÃ³digo</label>
      <input type="text" class="form-control" id="codigo" name="codigo" value="<%= cuenta.codigo %>" required>
    </div>
    <div class="mb-3">
      <label for="nombre_cuenta" class="form-label">Nombre de la Cuenta</label>
      <input type="text" class="form-control" id="nombre_cuenta" name="nombre_cuenta" value="<%= cuenta.nombre_cuenta %>" required>
