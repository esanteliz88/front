<%- include('../../partials/header', { title: 'Editar Centro de Costo' }) %>
<%- include('../../partials/navbar') %>
<%- include('../../partials/sidebar') %>
<%- include('../../partials/content-wrapper-open') %>

<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="mb-4">Editar Centro de Costo</h4>
  <form action="/administracion/centrocostos/<%= centroCosto.id_centro_costo %>" method="POST">
    <div class="mb-3">
      <label for="codigo_centro_costo" class="form-label">CÃ³digo del Centro de Costo</label>
      <input type="text" class="form-control" id="codigo_centro_costo" name="codigo_centro_costo" value="<%= centroCosto.codigo_centro_costo %>">
    </div>
    <div class="mb-3">
      <label for="nombre" class="form-label">Nombre</label>
      <input type="text" class="form-control" id="nombre" name="nombre" value="<%= centroCosto.nombre %>" required>
    </div>
    <div class="mb-3">
      <label for="estatus" class="form-label">Estatus</label>
      <select class="form-select" id="estatus" name="estatus" required>
        <option value="1" <%= centroCosto.estatus === 'Activo' ? 'selected' : '' %>>Activo</option>
        <option value="0" <%= centroCosto.estatus === 'Inactivo' ? 'selected' : '' %>>Inactivo</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="id_gerente" class="form-label">Gerente</label>
      <select class="form-select" id="id_gerente" name="id_gerente" required>
        <option value="">-- Selecciona un Gerente --</option>
        <% gerentes.forEach(gerente => { %>
          <option value="<%= gerente.id %>" <%= centroCosto.id_gerente === gerente.id ? 'selected' : '' %>><%= gerente.nombre %> <%= gerente.apellido %></option>
        <% }) %>
      </select>
    </div>
    <div class="mb-3">
      <label for="nivel" class="form-label">Nivel</label>
      <input type="number" class="form-control" id="nivel" name="nivel" min="1" value="<%= centroCosto.nivel %>" required>
    </div>
    <div class="mb-3">
      <label for="monto" class="form-label">Monto</label>
      <input type="number" step="0.01" class="form-control" id="monto" name="monto" value="<%= centroCosto.monto %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar Centro de Costo</button>
    <a href="/administracion/centrocostos" class="btn btn-secondary">Cancelar</a>
  </form>
</div>

<%- include('../../partials/footer-text') %>
<%- include('../../partials/footer') %>
<%- include('../../partials/content-wrapper-close') %>
