  <body>
    <!-- Content -->
    <div class="authentication-wrapper authentication-cover">
      <!-- Logo -->
      <a href="/" class="app-brand auth-cover-brand">
        <span class="app-brand-logo demo">
          <img src="../../assets/img/logoTK/Logo.png" alt="" />
        </span>
        <span class="app-brand-text demo text-heading fw-bold">TURISTIK</span>
      </a>
      <!-- /Logo -->

      <div class="authentication-inner row m-0">
        <!-- /Left Text -->
        <div class="d-none d-lg-flex col-lg-8 p-0">
          <div
            class="auth-cover-bg auth-cover-bg-color d-flex justify-content-center align-items-center"
          >
            <img
              src="../../assets/img/logoTK/Logo.png"
              alt="auth-login-cover"
              class="my-5 auth-illustration"
              data-app-light-img="logoTK/Logo.png"
              data-app-dark-img="logoTK/Logo.png"
            />
          </div>
        </div>
        <!-- /Left Text -->

        <!-- Login -->
        <div
          class="d-flex col-12 col-lg-4 align-items-center authentication-bg p-sm-12 p-6"
        >
          <div class="w-px-400 mx-auto mt-12 pt-5">
            <h4 class="mb-1">Bienvenidos al Sistema OC! </h4>
            <p class="mb-6">Inicia Sesi贸n</p>

            <form id="formAuthentication" class="mb-6" method="post">
              <div class="mb-6">
                <label for="email" class="form-label">Correo</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="ingresa tu email"
                  autofocus
                />
              </div>
              <div class="mb-6 form-password-toggle">
                <label class="form-label" for="password">Contrase帽a</label>
                <div class="input-group input-group-merge">
                  <input
                    type="password"
                    id="password"
                    class="form-control"
                    name="password"
                    placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                    aria-describedby="password"
                  />
                  <span class="input-group-text cursor-pointer"
                    ><i class="ti ti-eye-off"></i
                  ></span>
                </div>
              </div>
              <button
                type="submit"
                class="btn btn-primary d-grid w-100"
              >
                Iniciar sesi贸n
              </button>

              <!-- Mostrar el mensaje de error aqu铆 -->
              <% if (error) { %>
              <div id="error-message">
                <%= error %>
              </div>
              <% } %>
            </form>
          </div>
        </div>

        <!-- /Login -->
      </div>
    </div>
    <!-- /Content -->

    <!-- Core JS -->
    <script src="../../assets/vendor/libs/jquery/jquery.js"></script>
    <script src="../../assets/vendor/libs/popper/popper.js"></script>
    <script src="../../assets/vendor/js/bootstrap.js"></script>
    <script src="../../assets/vendor/libs/node-waves/node-waves.js"></script>
    <script src="../../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="../../assets/vendor/libs/hammer/hammer.js"></script>
    <script src="../../assets/vendor/libs/i18n/i18n.js"></script>
    <script src="../../assets/vendor/libs/typeahead-js/typeahead.js"></script>
    <script src="../../assets/vendor/js/menu.js"></script>

    <!-- Vendors JS -->
    <script src="../../assets/vendor/libs/@form-validation/popular.js"></script>
    <script src="../../assets/vendor/libs/@form-validation/bootstrap5.js"></script>
    <script src="../../assets/vendor/libs/@form-validation/auto-focus.js"></script>

    <!-- Main JS -->
    <script src="../../assets/js/main.js"></script>

    <!-- Page JS -->
    <script src="../../assets/js/pages-auth.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById("formAuthentication");
        const errorMessageDiv = document.getElementById("error-message");
        const emailInput = document.getElementById("email");
        const passwordInput = document.getElementById("password");

        // Mapa de c贸digos de error hash a mensajes
        const errorMessages = {
          "6f6e4c0e2c4d9b54e0dff08b7b5f07a0f953e32b7e6795e7b6e55e87531a5f3d":
            "Invalid email or password",
          b9d9a0b530fe478c9e9b9e7d65a87c75da6a65fc9bb3d228b3ae1f84ac972a68:
            "User not found",
          // Agrega m谩s c贸digos seg煤n sea necesario
        };

        function getErrorMessage(errorCode) {
          return errorMessages[errorCode] || "Ocurri贸 un error desconocido";
        }

        form.addEventListener("submit", async (event) => {
          event.preventDefault(); // Evita el env铆o del formulario de manera tradicional

          const email = emailInput.value;
          const password = passwordInput.value;

          try {
            const response = await fetch("/login", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ email, password }),
            });

            if (response.ok) {
              const result = await response.json();
              window.location.href = result.redirect;
            } else {
              const result = await response.json();
              errorMessageDiv.textContent = getErrorMessage(result.error);
            }
          } catch (error) {
            console.error("Error:", error);
            errorMessageDiv.textContent =
              "Ocurri贸 un error inesperado. Int茅ntalo de nuevo.";
          }
        });

        // Borra el mensaje de error cuando se ingresa texto en los campos
        emailInput.addEventListener("input", () => {
          errorMessageDiv.textContent = "";
        });

        passwordInput.addEventListener("input", () => {
          errorMessageDiv.textContent = "";
        });
      });
    </script>
  </body>
</html>
